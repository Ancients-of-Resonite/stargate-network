{
  "workspace": [
    "apps/*",
    "packages/*"
  ],
  "nodeModulesDir": "auto",
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-unused-vars",
        "no-explicit-any"
      ]
    }
  },
  "tasks": {
    "lint": "deno lint",

    "socket:dev": "deno task --cwd ./apps/sgn-socket dev",
    "dash:dev": "deno task --cwd ./apps/sgn-dash dev",
    "dash:build": "deno task --cwd ./apps/sgn-dash build"
  },
  "imports": {
    "$shared/": "./packages/shared-utils/"
  }
}
